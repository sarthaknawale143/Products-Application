<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_thumb_Product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title......."
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
        app:layout_constraintTop_toTopOf="@id/img_thumb_Product"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/txt_product_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand Of the product"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
        app:layout_constraintTop_toBottomOf="@id/txt_product_title"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/txt_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product price here..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
        app:layout_constraintTop_toBottomOf="@id/txt_product_brand"
        android:layout_marginLeft="16dp"/>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
        tools:layout_editor_absoluteY="67dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_product_price">

        <TextView
            android:id="@+id/txt_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:text="An apple mobile which is nothing like apple"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
            app:layout_constraintTop_toBottomOf="@id/txt_product_price"
            android:maxLines="2"/>
    </ScrollView>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
        tools:layout_editor_absoluteY="67dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView1">

        <TextView
            android:id="@+id/txt_product_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:text="thumbnail"
            android:textColor="#004EA6"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_thumb_Product"
            app:layout_constraintTop_toBottomOf="@id/txt_product_price"
            android:maxLines="2"/>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>